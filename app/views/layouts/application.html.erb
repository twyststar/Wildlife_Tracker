<!DOCTYPE html>
<html>
  <head>
    <title>WildlifeTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main-heading">
      <h1>The Leimalama Wilderness Survey</h1>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <%= link_to "Animals", animals_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Sightings", sightings_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Regions", regions_path %>
        </li>
      </ul>
    </div>
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
