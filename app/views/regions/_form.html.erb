<%= render "layouts/errors", :object => @region %>

<%= form_for @region do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :class =>"form-control", :placeholder => "New region name" %>
  <%= f.label :description %>
  <%= f.text_field :description, :class =>"form-control" %>
  <br>
  <%= f.submit 'Create Region', :class => "form-button"%>
<% end %>
