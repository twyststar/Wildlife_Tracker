<%= render "layouts/errors", :object => @animal %>


<%= form_for @animal do |f| %>
  <%= f.label :species %>
  <%= f.text_field :species %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :endangered %>
  <%= f.select(:endangered) do %>

    <% [['True', true], ['False', false]].each do |c| -%>
      <%= content_tag(:option, c.first, value: c.last) %>
    <% end %>
  <% end %>
  <%= f.submit  %>
<% end %>
